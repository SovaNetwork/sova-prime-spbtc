# Dockerfile for Ponder Indexer
FROM node:20-alpine

WORKDIR /app

# Install wget for healthcheck
RUN apk add --no-cache wget

# Copy package files and install dependencies
COPY indexer/package*.json ./
RUN npm ci --legacy-peer-deps

# Copy all indexer files
COPY indexer/ ./

# Create non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 && \
    chown -R nodejs:nodejs /app

USER nodejs

# Expose Ponder GraphQL port
EXPOSE 42069

# Health check for Ponder GraphQL endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:42069/health || exit 1

# Start Ponder
CMD ["npm", "start"]