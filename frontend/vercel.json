{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_NETWORK": "@next_public_network",
    "NEXT_PUBLIC_ALCHEMY_KEY": "@next_public_alchemy_key",
    "NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID": "@next_public_walletconnect_project_id",
    "NEXT_PUBLIC_INDEXER_URL": "@next_public_indexer_url",
    "NEXT_PUBLIC_VAULT_ADDRESS": "@next_public_vault_address",
    "NEXT_PUBLIC_QUEUE_ADDRESS": "@next_public_queue_address",
    "NEXT_PUBLIC_REGISTRY_ADDRESS": "@next_public_registry_address",
    "NEXT_PUBLIC_STRATEGY_ADDRESS": "@next_public_strategy_address",
    "NEXT_PUBLIC_PRICE_ORACLE_ADDRESS": "@next_public_price_oracle_address",
    "NEXT_PUBLIC_WBTC_ADDRESS": "@next_public_wbtc_address",
    "NEXT_PUBLIC_TBTC_ADDRESS": "@next_public_tbtc_address",
    "NEXT_PUBLIC_SOVABTC_ADDRESS": "@next_public_sovabtc_address"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/indexer/:path*",
      "destination": "https://indexer.fountfi.io/:path*"
    }
  ],
  "functions": {
    "app/api/health/route.ts": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/monitor",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/metrics",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/collaterals",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/daily-summary",
      "schedule": "0 0 * * *"
    }
  ]
}