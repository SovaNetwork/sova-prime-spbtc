{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "dockerContext": "."
  },
  "deploy": {
    "numReplicas": 1,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "region": "us-west1",
    "runtime": "V2"
  },
  "environments": {
    "production": {
      "services": {
        "ponder": {
          "source": {
            "repo": "github.com/your-org/fountfi-sovabtc"
          },
          "variables": {
            "NETWORK": "base",
            "CHAIN_ID": "8453",
            "LOG_LEVEL": "info",
            "HEALTH_CHECK_ENABLED": "true"
          }
        }
      }
    },
    "staging": {
      "services": {
        "ponder": {
          "source": {
            "repo": "github.com/your-org/fountfi-sovabtc"
          },
          "variables": {
            "NETWORK": "base-sepolia",
            "CHAIN_ID": "84532",
            "LOG_LEVEL": "debug",
            "HEALTH_CHECK_ENABLED": "true"
          }
        }
      }
    }
  }
}