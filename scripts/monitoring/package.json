{
  "name": "vault-monitoring",
  "version": "1.0.0",
  "description": "Health monitoring system for Multi-Collateral BTC Vault",
  "main": "health-monitor.js",
  "scripts": {
    "start": "ts-node health-monitor.ts",
    "build": "tsc",
    "monitor": "node dist/health-monitor.js",
    "dev": "nodemon --exec ts-node health-monitor.ts",
    "docker": "docker build -t vault-monitor . && docker run --env-file .env vault-monitor"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}